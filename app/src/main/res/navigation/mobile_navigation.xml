<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="ie.thirdfloor.csis.ul.laedsgo.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_postsFragment2"
            app:destination="@id/postsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="ie.thirdfloor.csis.ul.laedsgo.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="ie.thirdfloor.csis.ul.laedsgo.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/postsFragment"
        android:name="ie.thirdfloor.csis.ul.laedsgo.ui.posts.PostsFragment"
        android:label="post_item_list"
        tools:layout="@layout/post_item_list" />
</navigation>